@model University.Data.Applicant

@{
    ViewBag.Title = "DeleteApplicant";
}

<h2>Delete Profile</h2>

<h3>Are you sure you want to delete your profile?</h3>
<div>
    <dl class="dl-horizontal">
        <dt>
            Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ApplicantName)
        </dd>

        <dt>
            Address
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ApplicantAddress)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Phone)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Phone)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="Delete" class="btn btn-danger btn-sm" />
        @Html.ActionLink("Cancel", "GetApplicant", new { id = Model.Id }, new { @class = "btn btn-link btn-sm" })
    </div>
    }
</div>
