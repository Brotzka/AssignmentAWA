@model University.Data.Application

@{
    ViewBag.Title = "DeleteApplication";
}

<h2>Delete Application</h2>

<h3>Are you sure you want to delete your application for <b>@Html.DisplayFor(model => model.CourseName)</b>?</h3>
<div>
   <br />

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="Delete" class="btn btn-danger btn-sm" />
        @Html.ActionLink("Cancel", "GetApplications", new { userId = ViewBag.UserId }, new { @class = "btn btn-link btn-sm" })
    </div>
    }
</div>
