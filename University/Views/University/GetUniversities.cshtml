@model IEnumerable<University.Data.University>

@{
    ViewBag.Title = "GetUniversities";
}

<h2>GetUniversities</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UniversityName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UniversityName)
        </td>
        <td>
            @Html.ActionLink("Show Courses", "Delete", new { id=item.UniversityId })
        </td>
    </tr>
}

</table>
