@model IEnumerable<University.Data.University>

@{
    ViewBag.Title = "GetUniversities";
}

<h2>Universities</h2>

<table class="table">
    <tr>
        <th>
            University
        </th>
        <th>
            +
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UniversityName)
        </td>
        <td>
            @Html.ActionLink("Show Courses", "GetCourses", new { Controller = "Course", UniversityId=item.UniversityId })
        </td>
    </tr>
}

</table>

<div>
    @Html.ActionLink("Back to applications", "GetApplications", new { userId = ViewBag.UserId, Controller="Application" }, new { @class = "btn btn-link btn-sm" })
</div>


